.flex{
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.red{
  width: 100%;
  background: red;
  flex: 1;
  overflow-y:scroll
}
.green{
  width: 100%;
  background: green;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.yellow{
  width: 100%;
  background: yellow;
  height: 50rpx;
}
.map{
  width: 100%;
  height: 200rpx;
}